[Unit]
Description=isuxi-python
After=syslog.target

[Service]
WorkingDirectory=/home/isucon/webapp/python
EnvironmentFile=/home/isucon/env.sh
ExecStart=/home/isucon/.local/python3/bin/gunicorn -w 2 -b unix:/var/run/gunicorn/gunicorn.sock --error-log /tmp/guri-error.log app:app
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
